---
import { Font } from "astro:assets";

import "@/styles/global.css";
import config from "@/data/config.json";

// import MetaPixelHead from "@/components/base/MetaPixelHead.astro";
// import MetaPixelBody from "@/components/base/MetaPixelBody.astro";
// import GoogleTagManagerHead from "@/components/base/GoogleTagManagerHead.astro";
// import GoogleTagManagerBody from "@/components/base/GoogleTagManagerBody.astro";
import OpenGraph from "@/components/base/OpenGraph.astro";

import type { lang } from "@interfaces/lang";
interface Props {
  lang: lang;
  className?: string;
}

const { lang } = Astro.props;
const constants = config[lang];
---

<!doctype html>
<html lang={lang} class="h-full scroll-smooth" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <title>{constants.TITLE}</title>

    <!-- <GoogleTagManagerHead /> -->
    <!-- <MetaPixelHead /> -->
    <OpenGraph lang={lang} />

    <Font cssVariable="--font-roboto" preload />
    <Font cssVariable="--font-roboto-italic" preload />
  </head>
  <body class="font-roboto clamp-[py,5,10] bg-green-500 text-base text-balance">
    <!-- <GoogleTagManagerBody /> -->
    <!-- <MetaPixelBody /> -->

    <slot />
  </body><script src="../scripts/scripts.ts"></script>
</html>
